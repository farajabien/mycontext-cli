{
  "name": "mycontext-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "publish:cli": "pnpm --filter mycontext-cli publish",
    "publish:core": "pnpm --filter @myycontext/core publish",
    "publish:all": "pnpm run build && pnpm run publish:core && pnpm run publish:cli",
    "version:cli": "cd apps/cli && npm version",
    "version:core": "cd packages/core && npm version",
    "link:cli": "cd apps/cli && pnpm link --global"
  },
  "devDependencies": {
    "turbo": "latest"
  },
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=18"
  }
}
