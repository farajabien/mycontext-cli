{
  "project_summary": {
    "app_name": "ShopEasy",
    "purpose": "Modern e-commerce platform for small businesses with integrated payments and inventory management",
    "key_features": [
      "product catalog",
      "shopping cart",
      "checkout process",
      "user accounts",
      "payment processing",
      "inventory management",
      "order tracking",
      "reviews and ratings"
    ],
    "user_types": ["customers", "sellers", "admins", "guests"],
    "success_metrics": [
      "conversion rate",
      "cart abandonment rate",
      "user retention",
      "average order value",
      "customer satisfaction"
    ]
  },
  "design_system": {
    "colors": {
      "primary": "#10B981",
      "secondary": "#6B7280",
      "accent": "#F59E0B",
      "success": "#10B981",
      "warning": "#F59E0B",
      "error": "#EF4444",
      "info": "#3B82F6"
    },
    "typography": {
      "heading": "Inter",
      "body": "Inter",
      "mono": "JetBrains Mono"
    },
    "spacing": {
      "base": 8,
      "scale": [4, 8, 12, 16, 20, 24, 32, 40, 48, 64, 80, 96]
    },
    "borderRadius": {
      "base": "8px",
      "large": "12px",
      "small": "4px",
      "full": "9999px"
    },
    "shadows": {
      "base": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
      "large": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
      "card": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)"
    }
  },
  "design_intent": {
    "design_anchors": [
      "trust",
      "simplicity",
      "efficiency",
      "delight"
    ],
    "key_principles": [
      "mobile-first",
      "accessibility",
      "performance",
      "conversion-optimized",
      "user-friendly"
    ],
    "user_experience_focus": "Streamlined shopping experience that builds trust and drives conversions"
  },
  "component_architecture": {
    "components": [
      {
        "name": "ProductCard",
        "description": "Product display card with image, title, price, and add to cart",
        "type": "display",
        "group": "products"
      },
      {
        "name": "ShoppingCart",
        "description": "Shopping cart sidebar with item management",
        "type": "interactive",
        "group": "cart"
      },
      {
        "name": "CheckoutForm",
        "description": "Multi-step checkout form with validation",
        "type": "form",
        "group": "checkout"
      },
      {
        "name": "ProductGrid",
        "description": "Responsive grid layout for product listings",
        "type": "layout",
        "group": "products"
      },
      {
        "name": "SearchBar",
        "description": "Product search with autocomplete and filters",
        "type": "interactive",
        "group": "navigation"
      }
    ],
    "groups": [
      {
        "name": "products",
        "description": "Product display and listing components",
        "components": ["ProductCard", "ProductGrid", "ProductImage", "PriceDisplay"]
      },
      {
        "name": "cart",
        "description": "Shopping cart and cart management",
        "components": ["ShoppingCart", "CartItem", "CartSummary", "CartButton"]
      },
      {
        "name": "checkout",
        "description": "Checkout process components",
        "components": ["CheckoutForm", "PaymentForm", "ShippingForm", "OrderSummary"]
      },
      {
        "name": "navigation",
        "description": "Site navigation and search",
        "components": ["SearchBar", "CategoryMenu", "Breadcrumb", "Pagination"]
      },
      {
        "name": "user",
        "description": "User account and authentication",
        "components": ["LoginForm", "RegisterForm", "UserProfile", "OrderHistory"]
      }
    ],
    "screens": [
      {
        "name": "HomePage",
        "description": "Landing page with featured products and categories",
        "layout_type": "single_column",
        "components": ["HeroBanner", "ProductGrid", "CategoryMenu"],
        "navigation_flow": ["Home", "Products", "Cart"],
        "user_journey_position": "entry"
      },
      {
        "name": "ProductListing",
        "description": "Product catalog with filters and sorting",
        "layout_type": "multi_column",
        "components": ["SearchBar", "ProductGrid", "FilterSidebar"],
        "navigation_flow": ["Home", "Products", "ProductDetail"],
        "user_journey_position": "main"
      },
      {
        "name": "ProductDetail",
        "description": "Individual product page with details and purchase options",
        "layout_type": "single_column",
        "components": ["ProductImage", "ProductInfo", "AddToCartButton", "Reviews"],
        "navigation_flow": ["Products", "ProductDetail", "Cart"],
        "user_journey_position": "main"
      },
      {
        "name": "Checkout",
        "description": "Multi-step checkout process",
        "layout_type": "single_column",
        "components": ["CheckoutForm", "OrderSummary", "PaymentForm"],
        "navigation_flow": ["Cart", "Checkout", "Confirmation"],
        "user_journey_position": "main"
      }
    ]
  },
  "visual_tokens": {
    "buttons": {
      "primary": {
        "background": "var(--primary)",
        "color": "white",
        "padding": "12px 24px",
        "borderRadius": "var(--radius-base)",
        "fontWeight": "600"
      },
      "secondary": {
        "background": "transparent",
        "color": "var(--primary)",
        "border": "2px solid var(--primary)",
        "padding": "10px 22px",
        "borderRadius": "var(--radius-base)"
      },
      "addToCart": {
        "background": "var(--accent)",
        "color": "white",
        "padding": "12px 24px",
        "borderRadius": "var(--radius-full)",
        "fontWeight": "600"
      }
    },
    "inputs": {
      "default": {
        "border": "2px solid var(--border)",
        "padding": "12px 16px",
        "borderRadius": "var(--radius-base)",
        "fontSize": "16px"
      },
      "search": {
        "border": "2px solid var(--primary)",
        "padding": "12px 16px 12px 48px",
        "borderRadius": "var(--radius-full)",
        "fontSize": "16px"
      }
    },
    "cards": {
      "product": {
        "background": "white",
        "border": "1px solid var(--border)",
        "borderRadius": "var(--radius-large)",
        "padding": "16px",
        "boxShadow": "var(--shadow-card)",
        "transition": "transform 0.2s, box-shadow 0.2s"
      },
      "hover": {
        "transform": "translateY(-2px)",
        "boxShadow": "var(--shadow-large)"
      }
    }
  },
  "technical_context": {
    "prd": "ShopEasy is a modern e-commerce platform designed for small to medium businesses. It provides a complete online shopping solution with integrated payments, inventory management, and customer relationship tools.",
    "types": "interface Product { id: string; name: string; price: number; description: string; images: string[]; category: string; }",
    "brand": "Modern, trustworthy, friendly, professional, accessible"
  },
  "implementation_guidelines": {
    "tech_stack": ["Next.js", "React", "TypeScript", "Tailwind CSS", "Stripe"],
    "patterns": ["server-components", "client-interactivity", "form-validation"],
    "performance": ["image-optimization", "lazy-loading", "code-splitting"]
  },
  "design_principles": [
    "Build trust through clear pricing and policies",
    "Minimize friction in the purchase flow",
    "Provide clear product information and images",
    "Enable easy product discovery and comparison",
    "Support mobile-first shopping experience"
  ],
  "interaction_patterns": [
    "Hover effects on product cards",
    "Smooth transitions between states",
    "Loading states for async operations",
    "Success feedback for actions",
    "Error handling with clear messages"
  ],
  "accessibility_requirements": [
    "WCAG 2.1 AA compliance",
    "Keyboard navigation for all interactive elements",
    "Screen reader support for product information",
    "High contrast mode compatibility",
    "Focus indicators for navigation"
  ]
}
