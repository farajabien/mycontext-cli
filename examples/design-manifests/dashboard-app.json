    "user_experience_focus": "Clear data visualization and actionable insights for business decision making"
  },
  "component_architecture": {
    "components": [
      {
        "name": "MetricCard",
        "description": "Display key performance indicators with trend indicators",
        "type": "display",
        "group": "metrics"
      },
      {
        "name": "ChartContainer",
        "description": "Wrapper for various chart types with controls",
        "type": "display",
        "group": "charts"
      },
      {
        "name": "DataTable",
        "description": "Sortable and filterable data table with pagination",
        "type": "display",
        "group": "tables"
      },
      {
        "name": "FilterPanel",
        "description": "Sidebar with date range and category filters",
        "type": "interactive",
        "group": "filters"
      },
      {
        "name": "ExportButton",
        "description": "Export data in various formats",
        "type": "interactive",
        "group": "actions"
      }
    ],
    "groups": [
      {
        "name": "metrics",
        "description": "Key performance indicator displays",
        "components": ["MetricCard", "TrendIndicator", "KPIWidget"]
      },
      {
        "name": "charts",
        "description": "Data visualization components",
        "components": ["ChartContainer", "LineChart", "BarChart", "PieChart"]
      },
      {
        "name": "tables",
        "description": "Data table components",
        "components": ["DataTable", "SortableHeader", "Pagination"]
      },
      {
        "name": "filters",
        "description": "Data filtering and controls",
        "components": ["FilterPanel", "DateRangePicker", "CategoryFilter"]
      },
      {
        "name": "actions",
        "description": "User action components",
        "components": ["ExportButton", "RefreshButton", "SettingsButton"]
      }
    ],
    "screens": [
      {
        "name": "Dashboard",
        "description": "Main analytics dashboard with overview metrics",
        "layout_type": "dashboard",
        "components": ["MetricCard", "ChartContainer", "FilterPanel"],
        "navigation_flow": ["Overview", "Details", "Reports"],
        "user_journey_position": "main"
      },
      {
        "name": "Reports",
        "description": "Detailed reports and data analysis",
        "layout_type": "multi_column",
        "components": ["DataTable", "ChartContainer", "ExportButton"],
        "navigation_flow": ["Dashboard", "Reports", "Export"],
        "user_journey_position": "secondary"
      }
    ]
  },
  "visual_tokens": {
    "buttons": {
      "primary": {
        "background": "var(--primary)",
        "color": "white",
        "padding": "8px 16px",
        "borderRadius": "var(--radius-base)"
      },
      "secondary": {
        "background": "var(--secondary)",
        "color": "white",
        "padding": "8px 16px",
        "borderRadius": "var(--radius-base)"
      }
    },
    "inputs": {
      "default": {
        "border": "1px solid var(--border)",
        "padding": "8px 12px",
        "borderRadius": "var(--radius-base)",
        "fontSize": "14px"
      },
      "focus": {
        "border": "2px solid var(--primary)",
        "boxShadow": "0 0 0 3px rgba(59, 130, 246, 0.1)"
      }
    },
    "cards": {
      "default": {
        "background": "white",
        "border": "1px solid var(--border)",
        "borderRadius": "var(--radius-large)",
        "padding": "24px",
        "boxShadow": "var(--shadow-base)"
      },
      "elevated": {
        "background": "white",
        "border": "none",
        "borderRadius": "var(--radius-large)",
        "padding": "24px",
        "boxShadow": "var(--shadow-large)"
      }
    }
  },
  "technical_context": {
    "prd": "AnalyticsPro is a comprehensive business intelligence dashboard designed for data-driven organizations. The platform provides real-time analytics, interactive visualizations, and customizable reports to help teams make informed decisions.",
    "types": "interface MetricData { value: number; trend: 'up' | 'down' | 'stable'; change: number; }",
    "brand": "Professional, data-focused, clean, modern, trustworthy"
  },
